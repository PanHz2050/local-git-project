/* movie music eesay 公共样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img {
  width: 750rpx;
  height: 500rpx;
}
.content {
  max-width: 550rpx;
  font-size: 36rpx;
}
.tag {
  width: 46rpx;
  height: 144rpx;
  position: relative;
  right:310rpx;
  bottom: 58rpx;
}
/* 适应iPad屏幕 */
@media screen and (min-width: 700px) {
  .contentMovie {
    position: relative;
    bottom: 80rpx;
    font-size: 28rpx;
  }
  .contentEssay {
    position: relative;
    bottom: 65rpx;
    font-size: 28rpx;
  }
  .container>.contentMusic {
    position: absolute;
    bottom: 178rpx;
    font-size: 28rpx;
  }
}