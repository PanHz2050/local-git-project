<!-- pages/classic/classic.wxml -->
<view class="container">
  <view class="header">
    <v-episode class="episode" index="{{classicData.art.index}}" />
    <view class="like-container">
      <v-like style="width: 103rpx; height: 52rpx; display: block; box-sizing: border-box" class="like" bind:like="onLike" like="{{likeStatus}}" count="{{likeCount}}" />
      <v-button class="share-btn" openType="share">
        <image slot="img" class="share" src="/images/icon/share.png"></image>
      </v-button>
    </view>
  </view>
  <v-movie hidden="{{classicData.art.type != 100}}" content="{{classicData.art.content}}" img="{{classicData.art.image}}" />
  <v-music wx:if="{{classicData.art.type == 200}}" content="{{classicData.art.content}}" img="{{classicData.art.image}}" src="{{classicData.art.url}}" title="{{classicData.art.title}}"></v-music>
  <v-essay hidden="{{classicData.art.type != 300}}" content="{{classicData.art.content}}" img="{{classicData.art.image}}" />
  <v-navi class="navi" title="{{classicData.art.title}}" first="{{first}}" latest="{{latest}}" bind:left="onNext" bind:right="onPrevious" />
</view>
