/* pages/popular/popular.wxss */
page {
  background-color: #f5f5f5;
}

.container {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.header {
	position: fixed;
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	z-index: 99;
	background-color: #ffffff;
	border-top: 1px solid #f5f5f5;
	border-bottom: 1px solid #f5f5f5;
	box-shadow: 0 0 3px 0 #e3e3e3;
}
.box {
	width: 700rpx;
	height: 68rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	border-radius: 50px;
	background-color: #f5f5f5;
	color: #999999;
}
.box image {
	margin-right: 10px;
	width: 14px;
	height: 14px;
	margin-bottom: -2px;
}

.sub-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 100rpx;
	background-color: #f5f5f5;
}
.head-img {
	width: 106rpx;
	height: 34rpx;
	margin-top: 40rpx;
	margin-right: 24rpx;
}
.books-container {
  display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	margin-top: 10rpx;
	padding: 0 90rpx;
}
.books-container v-book {
	margin-bottom: 10rpx;
}

